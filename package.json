{
  "name": "avro-club-management",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/albert85/SMS-Management-Application-API.git",
  "author": "Olarewaju Temtope Albert <tmtpalbert@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec babel-node ./src/index.js",
    "build": "babel src --out-dir dist",
    "start": "node dist/index.js",
    "lint": "eslint src --fix",
    "test": "cross-env NODE_ENV=test jest --no-cache --forceExit",
    "coverage": "cat coverage/lcov.info | coveralls",
    "db:migrate": "yarn run sequelize-cli db:migrate",
    "db:migrate:latest": "yarn run sequelize db:migrate",
    "db:undo": "yarn run sequelize-cli db:migrate:undo:all",
    "db:seed": "yarn run sequelize-cli db:seed:all",
    "db:reseed": "yarn run db:undo && yarn run db:migrate && yarn run db:seed",
    "db:seed:undo": "yarn run db:seed:undo"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.4.2",
    "@types/jest": "^24.0.11",
    "babel-jest": "^24.7.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-preset-env": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.13",
    "sequelize-cli": "^6.2.0",
    "swagger-jsdoc": "^3.2.8",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.3.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!server/src/index.js",
      "!**/node_modules/**",
      "!**/coverage/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js ts",
    "ignore": [
      "*.test.ts",
      "*.test.js"
    ],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  }
}
